<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Cms\Model\Wysiwyg\Images\Storage">
        <plugin name="ktpl_s3_model_cms_wysiwyg_images_storage_plugin" type="Ktpl\S3\Model\Cms\Wysiwyg\Images\Storage\Plugin" />
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="s3ConfigListCommand" xsi:type="object">Ktpl\S3\Console\Command\ConfigListCommand</item>
                <item name="s3ConfigSetCommand" xsi:type="object">Ktpl\S3\Console\Command\ConfigSetCommand</item>
                <item name="s3CustomEndpointDisableCommand" xsi:type="object">Ktpl\S3\Console\Command\CustomEndpointDisableCommand</item>
                <item name="s3CustomEndpointEnableCommand" xsi:type="object">Ktpl\S3\Console\Command\CustomEndpointEnableCommand</item>
                <item name="s3StorageDisableCommand" xsi:type="object">Ktpl\S3\Console\Command\StorageDisableCommand</item>
                <item name="s3StorageEnableCommand" xsi:type="object">Ktpl\S3\Console\Command\StorageEnableCommand</item>
                <item name="s3StorageExportCommand" xsi:type="object">Ktpl\S3\Console\Command\StorageExportCommand</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\MediaStorage\Block\System\Config\System\Storage\Media\Synchronize">
        <plugin name="ktpl_s3_block_mediastorage_system_config_system_storage_media_synchronise_plugin" type="Ktpl\S3\Block\MediaStorage\System\Config\System\Storage\Media\Synchronise\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Helper\File\Storage\Database">
        <plugin name="ktpl_s3_helper_mediastorage_file_storage_database_plugin" type="Ktpl\S3\Helper\MediaStorage\File\Storage\Database\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Model\Config\Source\Storage\Media\Storage">
        <plugin name="ktpl_s3_model_mediastorage_config_source_storage_media_storage_plugin" type="Ktpl\S3\Model\MediaStorage\Config\Source\Storage\Media\Storage\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Model\File\Storage">
        <plugin name="ktpl_s3_model_mediastorage_file_storage_plugin" type="Ktpl\S3\Model\MediaStorage\File\Storage\Plugin" />
    </type>
    <type name="\Magento\MediaStorage\Model\File\Storage\Database">
        <plugin name="ktpl_s3_model_mediastorage_file_storage_database_plugin" type="Ktpl\S3\Model\MediaStorage\File\Storage\Database\Plugin" />
    </type>
    <type name="\Magento\MediaStorage\Model\File\Storage\Directory\Database">
        <plugin name="ktpl_s3_model_mediastorage_file_storage_directory_database_plugin" type="Ktpl\S3\Model\MediaStorage\File\Storage\Directory\Database\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Model\File\Storage\Synchronization">
        <plugin name="ktpl_s3_model_mediastorage_file_storage_synchronisation_plugin" type="Ktpl\S3\Model\MediaStorage\File\Storage\Synchronisation\Plugin" />
    </type>
    <type name="Magento\ProductVideo\Controller\Adminhtml\Product\Gallery\RetrieveImage">
        <arguments>
            <!-- We need to upload the temporary product video thumbnails to S3 -->
            <argument name="fileUtility" xsi:type="object">Ktpl\S3\Model\ResourceModel\MediaStorage\File\Storage\File</argument>
        </arguments>
    </type>
    <type name="Magento\Store\Model\Store">
        <plugin name="ktpl_s3_model_store_store_plugin" type="Ktpl\S3\Model\Store\Store\Plugin" />
    </type>
    <type name="Magento\Swatches\Helper\Media">
        <plugin name="ktpl_s3_helper_swatches_media_plugin" type="Ktpl\S3\Helper\Swatches\Media\Plugin" />
    </type>
    <type name="Magento\Captcha\Model\DefaultModel">
        <plugin name="ktpl_s3_model_captcha_defaultmodel_plugin" type="Ktpl\S3\Model\Captcha\DefaultModel\Plugin" />
    </type>
    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="ktpl_s3/general/access_key" xsi:type="string">1</item>
                <item name="ktpl_s3/general/secret_key" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Theme\Model\Design\Backend\Logo">
        <plugin name="ktpl_s3_model_theme_design_backend_logo_plugin" type="Ktpl\S3\Model\Theme\Design\Backend\Logo\Plugin" />
    </type>
    <type name="Magento\Theme\Model\Design\Backend\Favicon">
        <plugin name="ktpl_s3_model_theme_design_backend_favicon_plugin" type="Ktpl\S3\Model\Theme\Design\Backend\Favicon\Plugin" />
    </type>
    <type name="Magento\MediaStorage\Service\ImageResize">
        <plugin name="ktpl_s3_model_storage_media_resize_image_plugin" type="Ktpl\S3\Service\Plugin" />
    </type>
</config>
